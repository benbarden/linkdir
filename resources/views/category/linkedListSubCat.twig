{% if categoryList.count > 0 %}
    <h2>Subcategories</h2>
    {% set rowNum = -1 %}
    {% for category in categoryList %}
        {% set rowNum = rowNum + 1 %}
        {% if rowNum == 0 %}
            <div class="row">
        {% endif %}
        {% if rowNum % 6 == 0 %}
            </div>
            <div class="row">
        {% endif %}
        <div class="col-xs-3 col-sm-2">
            <a href="/{{ category.CACHE_URL }}">{{ category.TITLE }}</a>
        </div>
        {% if rowNum == categoryList.count-1 %}
            </div>
        {% endif %}
    {% endfor %}
{% endif %}
